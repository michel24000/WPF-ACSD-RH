<Window x:Class="WPF_ACSD_RH.Views.tuto1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_ACSD_RH.Views"
        mc:Ignorable="d"
        Title="tuto1" 
        MinHeight="650" MinWidth="600" Background="#FFD5DBE2" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="1" FontSize="16" Content="Gérer un compte utilisateur." HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <WebBrowser Grid.Row="1" Grid.Column="1" x:Name="webBrowser" />
    </Grid>
</Window>
